<Application x:Class="Chart.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Chart"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:col="clr-namespace:System.Collections;assembly=mscorlib"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <col:ArrayList x:Key="fonts">
            <sys:String>Arial</sys:String>
            <sys:String>Segoe UI</sys:String>
            <sys:String>Calibri</sys:String>
        </col:ArrayList>
        <col:ArrayList x:Key="brushes">
            <sys:ConsoleColor>Red</sys:ConsoleColor>
            <sys:ConsoleColor>Green</sys:ConsoleColor>
            <sys:ConsoleColor>Blue</sys:ConsoleColor>
        </col:ArrayList>
        <col:ArrayList x:Key="sizes">
            <sys:String>10</sys:String>
            <sys:String>12</sys:String>
            <sys:String>14</sys:String>
        </col:ArrayList>
    </Application.Resources>
</Application>
